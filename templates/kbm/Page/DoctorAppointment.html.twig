                                            <thead>
                                                <tr>
                                                    <th>{{ 'DataTable.NÂ°'|trans }}</th>
                                                    <th>{{ 'DataTable.Lastname'|trans }}</th>
                                                    <th>{{ 'DataTable.Firstname'|trans }}</th>
                                                    <th>{{ 'DataTable.date_hour'|trans }}</th>
													<th>{{ 'DataTable.pattern'|trans }}</th>
                                                    <th>{{ 'DataTable.status'|trans }}</th>
